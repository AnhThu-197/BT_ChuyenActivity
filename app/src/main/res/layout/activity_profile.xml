<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_2240"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_100"
    tools:context=".ProfileActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle_2240"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hồ sơ cá nhân"
        android:textColor="@color/pink_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút cài đặt -->
    <ImageButton
        android:id="@+id/btnSettings_2240"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings"
        app:tint="@color/pink_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ảnh đại diện -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar_2240"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_person"
        app:civ_border_color="@color/pink_400"
        app:civ_border_width="3dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle_2240"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/tvProfileName_2240"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nguyễn Hoàng Anh Thư"
        android:textColor="@color/pink_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar_2240"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thống kê bạn bè / theo dõi -->
    <LinearLayout
        android:id="@+id/statsLayout_2240"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvProfileName_2240"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Friends -->
        <LinearLayout
            android:id="@+id/friendLayout_2240"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="32dp">
            <TextView
                android:id="@+id/tvFriends_2240"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textColor="@color/pink_700"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvFriendLabel_2240"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn bè"
                android:textColor="@color/pink_400"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Followers -->
        <LinearLayout
            android:id="@+id/followerLayout_2240"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tvFollowers_2240"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="@color/pink_700"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvFollowerLabel_2240"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người theo dõi"
                android:textColor="@color/pink_400"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Card thông tin -->
    <androidx.cardview.widget.CardView
        android:id="@+id/infoCard_2240"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/statsLayout_2240"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/infoLayout_2240"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:divider="@color/pink_200"
            android:showDividers="middle">

            <!-- Email -->
            <LinearLayout
                android:id="@+id/emailRow_2240"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/emailIcon_2240"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/pink_400"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvEmail_2240"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23115053122240@sv.ute.udn.vn"
                    android:textColor="@color/pink_700"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:id="@+id/phoneRow_2240"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/phoneIcon_2240"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="@color/pink_400"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvPhone_2240"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+84 123456789"
                    android:textColor="@color/pink_700"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Skype -->
            <LinearLayout
                android:id="@+id/skypeRow_2240"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/skypeIcon_2240"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="@color/pink_400"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvSkype_2240"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="thunguyen"
                    android:textColor="@color/pink_700"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Website -->
            <LinearLayout
                android:id="@+id/webRow_2240"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <ImageView
                    android:id="@+id/webIcon_2240"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_view"
                    app:tint="@color/pink_400"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvWebsite_2240"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anhthu.app"
                    android:textColor="@color/pink_700"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
